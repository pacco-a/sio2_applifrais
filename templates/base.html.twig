<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}Welcome!
        {% endblock %}
    </title>
    {% block stylesheets %}{% endblock %}
</head>
<body>

{# include : HEADER #}
{% include "layouts/header.html.twig" %}

<menu class="main-menu">
    <ul>
        <li><a href="{{ path('index') }}">Accueil</a></li>
        {# CHECK RANK #}
        {% if is_granted("ROLE_VIS") %}
            <li><a href="{{ path('fiche') }}">Fiche de frais</a></li>
        {% elseif is_granted("ROLE_COMP") %}
            <li>Valider fiche</li>
        {% elseif is_granted("ROLE_ADMIN") %}
            <li><a href="{{ path('admin') }}">Panneau administrateur</a></li>
        {% endif %}
        {# CHECK IF LOGIN #}
        {% if is_granted("IS_AUTHENTICATED_FULLY") %}
            {# TODO profil page #}
            <li>Profil</li>
            <li><a href="{{ path('security_logout') }}">Deconnexion</a></li>
        {% else %}
            <li><a href="{{ path('security_login') }}">Connexion</a></li>
        {% endif %}
    </ul>
</menu>

{# block : BODY (content) #}
<div class="content">
    {% block body %}
    {% endblock %}
</div>

{# block : JS scripts #}
{% block javascripts %}{% endblock %}

</body>
</html>
